{
  "name": "scoreboard-app",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.migas.bowlingscoreboard",
    "productName": "Kolky livestream výsledková tabuľa",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "scoreboard-web/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assests/app-icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assests/app-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assests/app-icon.png"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Samuel Migas",
  "license": "ISC",
  "description": "scoreboard",
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8"
  }
}
